<Window x:Class="RecuritmentSystem20122791.AssignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecuritmentSystem20122791"
        mc:Ignorable="d"
        Title="AssignWindow" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ListboxContractors" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="1" Margin="0,10,0,10" Background="#FF000000" Foreground="White" FontSize="10" Padding="30,0,0,0" d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="ListboxContractors_MouseDoubleClick"/>
        <Label Grid.Column="1" Content="Available Contractor List" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Bottom" Height="42" Width="350" Grid.ColumnSpan="3" FontSize="25" FontWeight="Black" Margin="5,0,0,5"/>
        <Button x:Name="ButtonAssign" Content="ASSIGN" Grid.Column="1" Margin="0,0,0,0" Grid.Row="3" Height="40" Width ="170" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="18" Background="#FFB4F6A0" Click="ButtonAssign_Click"/>
        <Button x:Name="ButtonAuto" Content="AUTO ASSIGN" Grid.Column="2" Margin="0,0,0,0" Grid.Row="3" Height="40" Width ="170" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="18" Background="#FFB4F6A0" Click="ButtonAuto_Click"/>
    </Grid>
</Window>
