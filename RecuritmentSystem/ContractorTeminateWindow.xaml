<Window x:Class="RecuritmentSystem20122791.TeminateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecuritmentSystem20122791"
        mc:Ignorable="d"
        Title="TeminateWindow" Height="100" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content="Termination Date" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="1" VerticalAlignment="Center" FontWeight="Bold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
        <TextBox x:Name="TextboxTemination" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="1" TextWrapping="Wrap" Text="DD/MM/YYYY" VerticalAlignment="Center" Height="20" Width="140" HorizontalContentAlignment="Right" PreviewGotKeyboardFocus="TextboxTemination_PreviewGotKeyboardFocus"/>
        <Button x:Name ="ButtonConfirm" Content="CONFIRM" Grid.Column="3" Margin="0,0,5,0" Grid.Row="1" Height="20" Width ="140" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="10" Background="#FFB4F6A0" Click="ButtonConfirm_Click"/>

    </Grid>
</Window>
